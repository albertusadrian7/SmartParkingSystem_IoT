<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    tools:context=".view.warga.e_commerce.WargaMarketFragment">

        <View
            android:id="@+id/headerBackground"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:background="@color/primary_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintEnd_toEndOf="@id/headerBackground"
            app:layout_constraintStart_toStartOf="@id/headerBackground"
            app:layout_constraintBottom_toBottomOf="@id/headerBackground"
            android:background="@drawable/input_market_search"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:drawableEnd="@drawable/ic_search"
            android:hint="Cari sesuatu...."
            android:textSize="@dimen/_11ssp"
            android:textColorHint="@color/grey_2"
            android:paddingLeft="@dimen/_14sdp"
            android:paddingRight="@dimen/_10sdp"
            />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_16sdp"
            >

            <TextView
                android:id="@+id/tvToko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_16sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Daftar Toko"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <LinearLayout
                android:id="@+id/layoutRvDaftarToko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvToko"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDaftarToko"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_16sdp"
                    tools:itemCount="1"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_card_toko"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTerlaris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_16sdp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Terlaris"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutRvDaftarToko"
                />

            <LinearLayout
                android:id="@+id/layoutRvProdukTerlaris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTerlaris"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProdukTerlaris"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_16sdp"
                    tools:itemCount="1"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_card_produk"/>
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>











</androidx.constraintlayout.widget.ConstraintLayout>