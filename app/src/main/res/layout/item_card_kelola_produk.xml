<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/_8sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnSaldo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_kelola_produk"
        android:padding="@dimen/_16sdp"
        >

        <RelativeLayout
            android:id="@+id/layoutProduk"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivGambarProduk"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/default_image"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tvNamaProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivGambarProduk"
                android:layout_marginLeft="@dimen/_16sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:text="Beras Asin Tapi Boong"
                android:fontFamily="@font/poppins_semibold"
                />

            <TextView
                android:id="@+id/tvHargaProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNamaProduk"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_toRightOf="@+id/ivGambarProduk"
                android:fontFamily="@font/poppins"
                android:text="Rp 5.000.000,-"
                android:textColor="@color/grey_1"
                android:textSize="@dimen/_10ssp" />


            <TextView
                android:id="@+id/tvKeteranganProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHargaProduk"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_toRightOf="@+id/ivGambarProduk"
                android:fontFamily="@font/poppins"
                android:text="8 pcs"
                android:textColor="@color/grey_1"
                android:textSize="@dimen/_9ssp" />

        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutProduk"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditProduk"
                android:background="@drawable/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_8sdp"
                android:text="Edit"
                android:textColor="@color/primary_orange"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHapusProduk"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/grey_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hapus"
                android:textColor="@color/grey_2"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>