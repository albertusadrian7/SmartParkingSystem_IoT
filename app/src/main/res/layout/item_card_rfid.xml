<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_16sdp"
    app:cardCornerRadius="@dimen/_16sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_blue"
        android:padding="@dimen/_24sdp"
        >

        <TextView
            android:id="@+id/tvNamaKartu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kartu Imunisasi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_16ssp"/>

        <TextView
            android:id="@+id/tvNamaParkir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SmartParking"
            app:layout_constraintTop_toBottomOf="@id/tvNamaKartu"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/_11ssp"/>

        <TextView
            android:id="@+id/tvIdKartu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** **** 4567"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/tvNamaParkir"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_16ssp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>