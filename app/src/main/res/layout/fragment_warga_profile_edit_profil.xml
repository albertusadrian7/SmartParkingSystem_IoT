<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/headerBackground"
            android:layout_width="0dp"
            android:layout_height="@dimen/_70sdp"
            android:background="@color/primary_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_35sdp"
            android:paddingHorizontal="@dimen/_16sdp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/btnKembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_left"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tvJudulHalaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:text="Edit Profil"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_70sdp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_16sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivGambarProduk"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/default_image"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnInsertGambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/primary_orange"
                android:src="@drawable/ic_icon_camera"
                app:fabSize="mini"
                app:borderWidth="0dp"
                app:tint="@color/white"
                app:layout_constraintEnd_toEndOf="@id/ivGambarProduk"
                app:layout_constraintBottom_toBottomOf="@id/ivGambarProduk"
                android:layout_marginRight="-5dp"
                android:layout_marginBottom="-5dp"/>

            <TextView
                android:id="@+id/tvLabelNamaWarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivGambarProduk"
                android:layout_marginTop="@dimen/_24sdp"
                android:text="Nama Lengkap"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                />

            <EditText
                android:id="@+id/etNamaWarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvLabelNamaWarga"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/et_edit_produk"
                android:padding="@dimen/_8sdp"
                android:text="Albertus Adrian Susanto"
                android:hint="Masukkan nama lengkap..."
                android:textColorHint="@color/grey_3"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvLabelNoHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etNamaWarga"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="No HP"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                />

            <EditText
                android:id="@+id/etNoHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvLabelNoHP"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/et_edit_produk"
                android:padding="@dimen/_8sdp"
                android:text="0821345678"
                android:hint="Masukkan nomor HP..."
                android:inputType="number"
                android:textColorHint="@color/grey_3"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvLabelEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etNoHP"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Email"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvLabelEmail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/et_edit_produk"
                android:padding="@dimen/_8sdp"
                android:text="albertsadrian7@gmail.com"
                android:hint="Masukkan email..."
                android:textColorHint="@color/grey_3"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintTop_toBottomOf="@id/etNoHP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/button_1"
                android:text="Simpan"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_12ssp"
                android:textAllCaps="false"
                />

            <TextView
                android:id="@+id/tvGantiPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etEmail"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="Ganti password?"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary_orange"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>