<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    tools:context="view.pengunjung.PengunjungDashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="@dimen/_150sdp"
        android:background="@color/primary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="258dp"
            android:layout_height="132dp"
            android:src="@drawable/vector_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.1" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="225dp"
            android:layout_height="106dp"
            android:src="@drawable/vector_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/saldo"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toTopOf="@id/tvJumlahSaldo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvJumlahSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/poppins_bold"
        android:text="Rp 5.000,-"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardHeader"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnNotifikasi"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_icon_bell"
        android:scaleType="center"
        app:fabCustomSize="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardHeader"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:backgroundTint="#20FFFFFF"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:pressedTranslationZ="0dp"
        app:tint="@color/white"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintBottom_toBottomOf="@id/headerBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_14sdp"
            >

            <LinearLayout
                android:id="@+id/layoutTopUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/layoutSend"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/btnTopUp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:paddingHorizontal="@dimen/_9sdp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/round_corner"
                    android:backgroundTint="@color/primary_orange"
                    android:src="@drawable/ic_icon_plus"
                    />

                <TextView
                    android:id="@+id/tvTopUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:text="@string/top_up"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_4sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/layoutTopUp"
                app:layout_constraintEnd_toStartOf="@id/layoutRequest"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/btnSend"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:paddingHorizontal="@dimen/_9sdp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/round_corner"
                    android:backgroundTint="@color/purple"
                    android:src="@drawable/ic_icon_send" />

                <TextView
                    android:id="@+id/tvSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/kirim"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_4sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutRequest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/layoutSend"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/btnRequest"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:paddingHorizontal="@dimen/_9sdp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/round_corner"
                    android:backgroundTint="@color/soft_red"
                    android:src="@drawable/ic_icon_request" />

                <TextView
                    android:id="@+id/tvRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/minta"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_4sdp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:paddingTop="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginHorizontal="@dimen/_16sdp">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/layoutInformasi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/layoutPersuratan"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:drawableTop="@drawable/ic_icon_bullhorn"
                    android:drawableTint="@color/primary_orange"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:text="@string/informasi"
                    android:paddingVertical="@dimen/_16sdp"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/layoutPersuratan"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_70sdp"
                    app:layout_constraintStart_toEndOf="@id/layoutInformasi"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/layoutLaporan"
                    android:drawableTop="@drawable/ic_icon_message"
                    android:drawableTint="@color/primary_orange"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:text="@string/persuratan"
                    android:paddingVertical="@dimen/_16sdp"
                    android:textAllCaps="false" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/layoutLaporan"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_70sdp"
                    app:layout_constraintStart_toEndOf="@id/layoutPersuratan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/layoutLainnya"
                    android:drawableTop="@drawable/ic_icon_important"
                    android:drawableTint="@color/primary_orange"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:text="@string/laporan"
                    android:paddingVertical="@dimen/_16sdp"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/layoutLainnya"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:backgroundTint="@color/white"
                    android:drawableTop="@drawable/ic_icon_menu"
                    android:drawableTint="@color/primary_orange"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingVertical="@dimen/_16sdp"
                    android:text="@string/lainnya"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/layoutLaporan"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp">

                <TextView
                    android:id="@+id/tvInfoTerkini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/info_terkini"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLihatSelengkapnyaInfoTerkini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/lihat_semua"
                    android:textColor="@color/grey_3"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>