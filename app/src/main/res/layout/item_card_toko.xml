<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_80sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="0dp"
    android:layout_gravity="center"
    android:layout_marginRight="@dimen/_16sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_kelola_produk"
        >

        <ImageView
            android:id="@+id/ivGambarToko"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_80sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/default_image"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvNamaToko"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Warung\nBu Sosro"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            android:layout_margin="@dimen/_8sdp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@id/ivGambarToko"
            app:layout_constraintBottom_toBottomOf="@id/ivGambarToko"
            app:layout_constraintEnd_toEndOf="@id/ivGambarToko"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>